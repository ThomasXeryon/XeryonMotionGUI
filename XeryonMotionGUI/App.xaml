<Application
    x:Class="XeryonMotionGUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XeryonMotionGUI.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Styles/FontSizes.xaml" />
                <ResourceDictionary Source="/Styles/Thickness.xaml" />
                <ResourceDictionary Source="/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Declare your converter with a Key here -->
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        </ResourceDictionary>
        <Style TargetType="controls:InfoBar">
            <Style.Triggers>
                <!-- Trigger for Informational Severity -->
                <Trigger Property="Severity" Value="Informational">
                    <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}" />
                    <Setter Property="BorderBrush" Value="{ThemeResource SystemAccentColor}" />
                    <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <Setter Property="IconSource">
                        <Setter.Value>
                            <FontIconSource Glyph="" />
                            <!-- Use "Info" icon -->
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>