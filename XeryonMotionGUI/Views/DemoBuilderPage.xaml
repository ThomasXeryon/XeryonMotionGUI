<Page
    x:Class="XeryonMotionGUI.Views.DemoBuilderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XeryonMotionGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="using:XeryonMotionGUI.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:DemoBuilderViewModel />
    </Page.DataContext>
    <Grid>
        <!-- 
           ROWS:
             Row 0 -> Toolbar (auto-height)
             Row 1 -> Main content (*)
        -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 
           COLUMNS:
             Column 0 -> Block Palette (fixed width or min width)
             Column 1 -> Workspace (* = fills the rest)
             Column 2 -> Saved Programs (fixed width or min width)
        -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Block Palette -->
            <ColumnDefinition Width="*"/>
            <!-- Workspace (stretch) -->
            <ColumnDefinition Width="300"/>
            <!-- Saved Programs List -->
        </Grid.ColumnDefinitions>

        <!-- ========== TOP TOOLBAR (Row 0, spans all columns) ========== -->
        <StackPanel 
            Grid.Row="0" 
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            Background="LightGray"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Top"
            Padding="10"
            Spacing="10">

            <!-- Start Button -->
            <Button x:Name="StartButton"
                    Click="StartButton_Click"
                    ToolTipService.ToolTip="Start Program">
                <SymbolIcon Symbol="Play"/>
            </Button>

            <!-- Stop Button -->
            <Button x:Name="StopButton"
                    Click="StopButton_Click"
                    IsEnabled="False"
                    ToolTipService.ToolTip="Stop Program">
                <SymbolIcon Symbol="Stop"/>
            </Button>

            <!-- Save Button -->
            <Button x:Name="SaveButton"
                    Click="SaveProgramButton_Click"
                    ToolTipService.ToolTip="Save Program to File">
                <SymbolIcon Symbol="Save"/>
            </Button>

            <!-- Load Button -->
            <Button x:Name="LoadButton"
                    Click="LoadProgramButton_Click"
                    ToolTipService.ToolTip="Load Program from File">
                <SymbolIcon Symbol="OpenFile"/>
            </Button>
        </StackPanel>

        <!-- ========== BLOCK PALETTE (Row 1, Col 0) ========== -->
        <ScrollViewer 
            Grid.Row="1"
            Grid.Column="0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Margin="10">
            <StackPanel x:Name="BlockPalette">
                <TextBlock Text="Blocks" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="5"/>
                <!-- DraggableElements added in code-behind -->
            </StackPanel>
        </ScrollViewer>

        <!-- ========== WORKSPACE (Row 1, Col 1) ========== -->
        <Border 
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="Gray"
            BorderThickness="2"
            CornerRadius="5"
            Padding="5"
            Margin="5">
            <Grid>
                <!-- 
                  Make the ScrollViewer and Canvas more flexible in size 
                  so it doesn't force everything else off-screen 
                -->
                <ScrollViewer 
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto"
                    ZoomMode="Enabled"
                    MinZoomFactor="0.1"
                    MaxZoomFactor="10.0">

                    <!-- 
                      Remove or reduce the hard-coded 5000x5000. 
                      Let the Canvas auto-size or set it to something more modest. 
                    -->
                    <Canvas x:Name="WorkspaceCanvas"
                            Background="Transparent"
                            AllowDrop="True"
                            Width="2000"
                            Height="1500">

                        <!-- Snap shadow block for drag previews -->
                        <local:DraggableElement x:Name="SnapShadow"
                                                Text=""
                                                Width="150"
                                                Height="100"
                                                Opacity="0.5"
                                                Visibility="Collapsed"
                                                IsHitTestVisible="False"
                                                Background="Transparent" />

                        <!-- Green Flag Start Block -->
                        <local:DraggableElement x:Name="GreenFlagBlock"
                                                Text="Start"
                                                Canvas.ZIndex="100"
                                                Width="120"
                                                Margin="0"
                                                IsHitTestVisible="False">
                            <local:DraggableElement.Content>
                                <Border CornerRadius="5"
                                        Padding="10"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        BorderBrush="Black">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <FontIcon Glyph="&#xE768;" 
                                                  FontSize="16" 
                                                  Margin="0,0,5,0" 
                                                  Foreground="Green" />
                                        <TextBlock Text="Start" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </local:DraggableElement.Content>
                        </local:DraggableElement>

                    </Canvas>
                </ScrollViewer>

                <!-- Trash Icon overlay (bottom-right) -->
                <FontIcon x:Name="TrashIcon"
                          Glyph="&#xE74D;"
                          FontSize="24"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Bottom"
                          Margin="10">
                    <FontIcon.RenderTransform>
                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                    </FontIcon.RenderTransform>
                </FontIcon>
            </Grid>
        </Border>

        <!-- ========== SAVED PROGRAMS (Row 1, Col 2) ========== -->
        <Grid
            Grid.Row="1" 
            Grid.Column="2"
            Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



            <!-- Saved Programs List -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Saved Programs" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <ListView 
                    x:Name="SavedProgramsListView"
                    ItemsSource="{Binding AllSavedPrograms}"
                    SelectedItem="{Binding SelectedProgram, Mode=TwoWay}"
                    HorizontalAlignment="Stretch"
                    Height="300"
                    Margin="0,0,0,10"
                    SelectionChanged="SavedProgramsListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProgramName}" Margin="5,0,0,0" FontSize="14"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Buttons for managing programs -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="New" 
            Command="{Binding AddNewProgramCommand}" 
            Margin="5" Padding="10,5"/>
                    <Button Content="Rename" 
            Command="{Binding RenameProgramCommand}" 
            Margin="5" Padding="10,5"/>
                    <Button Content="Delete" 
            Command="{Binding DeleteProgramCommand}" 
            Margin="5" Padding="10,5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
