<Page
    x:Class="XeryonMotionGUI.Views.DemoBuilderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <Grid x:Name="ContentArea">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" />
      <!-- Block Palette -->
      <ColumnDefinition Width="*" />
      <!-- Workspace -->
    </Grid.ColumnDefinitions>

    <!-- Block Palette -->
    <ScrollViewer Grid.Column="0">
      <StackPanel>
        <TextBlock Text="Blocks" FontSize="16" FontWeight="Bold" Margin="10" />
        <Button Content="Move Left" Tag="MoveLeft" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>
        <Button Content="Move Right" Tag="MoveRight" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>
        <Button Content="Delay" Tag="Delay" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>
        <Button Content="Loop" Tag="Loop" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>

        <Button Content="Move Left" Tag="MoveLeft" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>
        <Button Content="Move Right" Tag="MoveRight" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>
        <Button Content="Delay" Tag="Delay" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>
        <Button Content="Loop" Tag="Loop" DragStarting="Block_DragStarting" Margin="10" CanDrag="True"/>

      </StackPanel>
    </ScrollViewer>

    <!-- Workspace -->
    <Canvas x:Name="WorkspaceCanvas" Grid.Column="1" Background="LightGray"
        AllowDrop="True"
        DragOver="WorkspaceCanvas_DragOver"
        Drop="WorkspaceCanvas_Drop"
        MinHeight="400" MinWidth="600" />

    <!-- Buttons for Execution and Saving -->
    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
      <Button Content="Run Demo" Click="RunDemo_Click" Margin="10" />
      <Button Content="Save Demo" Click="SaveDemo_Click" Margin="10" />
      <Button Content="Load Demo" Click="LoadDemo_Click" Margin="10" />
    </StackPanel>
  </Grid>
</Page>