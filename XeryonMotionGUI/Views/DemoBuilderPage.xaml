<Page
    x:Class="XeryonMotionGUI.Views.DemoBuilderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XeryonMotionGUI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Block Palette -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="BlockPalette">
                <TextBlock Text="Blocks" FontSize="16" FontWeight="Bold" Margin="10" />
                <!-- Palette Blocks will be added dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Workspace -->
        <Border Grid.Column="1"
                Background="Transparent"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="5"
                Padding="5">
            <Grid>
                <!-- Canvas -->
                <Canvas x:Name="WorkspaceCanvas"
                        Background="Transparent"
                        AllowDrop="True"
                        Width="2000"
                        Height="2000">
                    <!-- Shadow block for snapping preview -->
                    <local:DraggableElement x:Name="SnapShadow"
                        Text=""
                        Width="150"
                        Opacity="0.5"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        Background="Gray" />
                    <!-- Green Flag Start Block -->
                    <local:DraggableElement x:Name="GreenFlagBlock"
                        Text="Start"
                        Width="120"
                        Margin="10"
                        IsHitTestVisible="False">
                        <local:DraggableElement.Content>
                            <Border CornerRadius="5" Padding="10" Background="LightGray" BorderThickness="1" BorderBrush="Black">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Start Icon -->
                                    <FontIcon Glyph="&#xE768;" FontSize="16" Margin="0,0,5,0" Foreground="Green" />
                                    <!-- Start Text -->
                                    <TextBlock Text="Start" VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </local:DraggableElement.Content>
                    </local:DraggableElement>
                </Canvas>
                <Grid>
                    <!-- Existing Start Button -->
                    <Button x:Name="StartButton"
            Content="Start"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10"
            Click="StartButton_Click" />

                    <!-- New Stop Button -->
                    <Button x:Name="StopButton"
            Content="Stop"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="100,10,0,0"
            Click="StopButton_Click"
            IsEnabled="False" />
                    <!-- Initially disabled -->
                </Grid>

                <!-- Trash Icon -->
                <FontIcon x:Name="TrashIcon"
           Glyph="&#xE74D;"
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom"
           Margin="10"
           Foreground="Red"
           FontSize="24" />
            </Grid>
        </Border>
    </Grid>
</Page>