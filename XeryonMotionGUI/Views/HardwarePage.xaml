<Page
    x:Class="XeryonMotionGUI.Views.HardwarePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:XeryonMotionGUI.Helpers"
    mc:Ignorable="d">

    <Page.Resources>
        <local:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Refresh Button -->
        <Button Content="Refresh" Click="CheckForControllersButton_Click" Width="100" Height="30" HorizontalAlignment="Right" Margin="10" Grid.Row="0"/>

        <!-- Progress Bar -->
        <ProgressBar 
            x:Name="RefreshProgressBar" 
            IsIndeterminate="True" 
            Height="5" 
            Visibility="Collapsed" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Top" 
            Margin="0,40,0,0"
            Grid.Row="0"/>

        <!-- Title -->
        <TextBlock Text="Available Controllers" FontWeight="Bold" Margin="10" FontSize="24" HorizontalAlignment="Center" Grid.Row="0"/>

        <!-- Available Controllers List -->
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
            <ListBox x:Name="AvailableControllersList" ItemsSource="{Binding FoundControllers}" HorizontalAlignment="Stretch" Background="Transparent">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!-- Card Style for Controller -->
                        <Border HorizontalAlignment="Left" BorderBrush="DimGray" BorderThickness="1" CornerRadius="5" Background="Transparent" Margin="10,5">
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Controller Title -->
                                <TextBlock Text="{Binding ControllerTitle}" FontSize="20" FontWeight="Bold" Margin="10" Grid.Row="0"/>

                                <!-- Controller Details -->
                                <StackPanel Margin="10,-30,0,0" Grid.Row="1" Spacing="5">
                                    <TextBlock Text="Type:" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Type}" FontSize="16" Margin="0,0,0,5"/>

                                    <TextBlock Text="USB Port:" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding FriendlyPort}" FontSize="14" Margin="0,0,0,5"/>

                                    <TextBlock Text="Commercial Name:" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,0,0,5"/>

                                    <TextBlock Text="Serial Number:" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Serial}" FontSize="14" Margin="0,0,0,5"/>

                                    <TextBlock Text="Software Version:" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Soft}" FontSize="14" Margin="0,0,0,5"/>
                                </StackPanel>

                                <!-- Axes Section -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,50">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10">
                                        <ItemsControl ItemsSource="{Binding Axes}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <!-- Axis Card -->
                                                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding AxisTitle}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                                                            <TextBlock Text="Commercial Name:" FontSize="12" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Name}" FontSize="12" Margin="0,0,0,5"/>

                                                            <TextBlock Text="Type:" FontSize="12" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Type}" FontSize="12" Margin="0,0,0,5"/>

                                                            <TextBlock Text="Resolution:" FontSize="12" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Resolution}" FontSize="12" Margin="0,0,0,5"/>

                                                            <TextBlock Text="Friendly Name:" FontSize="12" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding FriendlyName}" FontSize="12" Margin="0,0,0,5"/>

                                                            <TextBlock Text="Travel Range:" FontSize="12" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Range}" FontSize="12" Margin="0,0,0,5"/>

                                                            <TextBlock Text="Axis Letter:" FontSize="12" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding AxisLetter}" FontSize="12" Margin="0,0,0,5"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- Connect Button -->
                                <Button Content="{Binding Status}" Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" Command="{Binding OpenPortCommand}" Width="150" Height="40" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="2" Margin="0,0,5,5"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Page>
