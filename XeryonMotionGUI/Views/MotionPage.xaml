<Page
    x:Class="XeryonMotionGUI.Views.MotionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XeryonMotionGUI.Views"
    xmlns:helpers="using:XeryonMotionGUI.Helpers"
    xmlns:oxyplot="using:OxyPlot"
    xmlns:classes="using:XeryonMotionGUI.Classes"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:XeryonMotionGUI.ViewModels">

    <Page.DataContext>
        <viewmodels:MotionViewModel />
    </Page.DataContext>

    <Page.Resources>
        <helpers:AxisTypeToVisibilityConverter x:Key="AxisTypeToVisibilityConverter" />
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
        <helpers:TooltipValueFormatter x:Key="TooltipValueFormatter" />
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Controllers Section -->
            <ListView 
            ItemsSource="{Binding RunningControllers}" 
            SelectedItem="{Binding SelectedController, Mode=TwoWay}"
            Grid.Column="0" 
            Grid.Row="0" 
            Margin="10,0,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding FriendlyName}" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />
                            <TextBlock Text="{Binding Type}" FontSize="14" Foreground="Gray" Grid.Row="1" Grid.Column="0" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Axes Section -->
            <ListView 
            Grid.Column="1"
            Grid.Row="0"
            ItemsSource="{Binding SelectedController.Axes}"
            SelectedItem="{Binding SelectedAxis, Mode=TwoWay}"
            Margin="20,0,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="classes:Axis">
                        <StackPanel>
                            <!-- InfoBar for the Axis -->
                            <ItemsControl ItemsSource="{Binding InfoBarMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="classes:InfoBarMessage">
                                        <controls:InfoBar
                                        IsOpen="True"
                                        Severity="{Binding Severity}"
                                        Title="{Binding Title}"
                                        Message="{Binding Message}"
                                        Margin="0,0,0,10"
                                        IsClosable="False" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid>
                                <!-- Define sufficient rows to accommodate all elements including the Expander -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <!-- Row 0: Title -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 1: EPOS, Speed, etc. -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 2: DPOS Slider -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 3: Button Box -->
                                    <RowDefinition Height="Auto" />

                                    <!-- Row 4: Expander -->
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Title -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="5,10,0,0" MaxWidth="400" HorizontalAlignment="Left"/>

                                <!-- Speed, Max Speed, and Time Display -->
                                <Grid Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- EPOS -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="10,5,0,0">
                                        <TextBlock 
                                        Text="Position" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0,0,0,5"/>
                                        <TextBox 
                                        Text="{Binding EPOS}" 
                                        Width="100" 
                                        IsReadOnly="True" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0"/>
                                    </StackPanel>

                                    <!-- Speed -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="10,5,0,0">
                                        <TextBlock 
                                        Text="Speed" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0,0,0,5"/>
                                        <TextBox 
                                        Text="{Binding SPEED}" 
                                        Width="100" 
                                        IsReadOnly="True" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0"/>
                                    </StackPanel>

                                    <!-- Max Speed -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="10,5,0,0">
                                        <TextBlock 
                                        Text="Top Speed" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0,0,0,5"/>
                                        <TextBox 
                                        Text="{Binding MaxSpeed}" 
                                        Width="100" 
                                        IsReadOnly="True" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        PointerEntered="TextBox_PointerEntered"
                                        Margin="0"/>
                                    </StackPanel>

                                    <!-- Time -->
                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="10,5,0,0">
                                        <TextBlock 
                                        Text="Time" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0,0,0,5"/>
                                        <TextBox 
                                        Text="{Binding PositionReachedElapsedMilliseconds}" 
                                        Width="100" 
                                        IsReadOnly="True" 
                                        HorizontalAlignment="Center" 
                                        TextAlignment="Center" 
                                        Margin="0">
                                            <ToolTipService.ToolTip>
                                                <ToolTip>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding PositionReachedElapsedMilliseconds, Converter={StaticResource TooltipValueFormatter}, ConverterParameter='Movement time'}" />
                                                        <TextBlock Text="{Binding CommandToPositionReachedMilliseconds, Converter={StaticResource TooltipValueFormatter}, ConverterParameter='Total time'}" />
                                                    </StackPanel>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBox>
                                    </StackPanel>
                                </Grid>

                                <!-- Status Bits -->
                                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="10,10,0,0" HorizontalAlignment="Right">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Position Reached" VerticalAlignment="Center" Margin="5,0" Grid.Row="0" Grid.Column="1" />
                                    <Ellipse 
                                    Width="15" 
                                    Height="15" 
                                    Fill="{Binding PositionReached, Converter={StaticResource BoolToColorConverter}}" 
                                    Margin="5,0,0,0"
                                    Stroke="Gray"
                                    StrokeThickness="0.5"
                                    HorizontalAlignment="Right"
                                    Grid.Row="0"
                                    Grid.Column="0" />

                                    <TextBlock Text="Index Found" VerticalAlignment="Center" Margin="5,0" Grid.Row="1" Grid.Column="1" />
                                    <Ellipse 
                                    Width="15" 
                                    Height="15" 
                                    Fill="{Binding EncoderValid, Converter={StaticResource BoolToColorConverter}}" 
                                    Margin="5,0,0,0"
                                    Stroke="Gray"
                                    StrokeThickness="0.5"
                                    HorizontalAlignment="Right"
                                    Grid.Row="1"
                                    Grid.Column="0" />

                                    <TextBlock Text="Motor on" VerticalAlignment="Center" Margin="5,0" Grid.Row="2" Grid.Column="1" />
                                    <Ellipse 
                                    Width="15" 
                                    Height="15" 
                                    Fill="{Binding MotorOn, Converter={StaticResource BoolToColorConverter}}" 
                                    Margin="5,0,0,0"
                                    Stroke="Gray"
                                    StrokeThickness="0.5"
                                    HorizontalAlignment="Right"
                                    Grid.Row="2"
                                    Grid.Column="0" />
                                </Grid>

                                <!-- DPOS Slider -->
                                <Grid Grid.Row="2" Grid.Column="0" Margin="7,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Slider
                                    x:Name="PositionSlider"
                                    Minimum="{Binding NegativeRange}"
                                    Maximum="{Binding PositiveRange}"
                                    Value="{Binding DPOS, Mode=TwoWay}"
                                    Margin="4,0,0,0" 
                                    TickFrequency="1"
                                    TickPlacement="Inline"
                                    StepFrequency="0.1"
                                    Width="428"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    ValueChanged="PositionSlider_ValueChanged"
                                    Grid.Column="1">
                                    </Slider>
                                </Grid>

                                <!-- Button Box -->
                                <Grid Grid.Row="3" Grid.Column="0" Margin="65,5,50,0" HorizontalAlignment="Left">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <!-- Layer 1 -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                                            <Button Content="Step -" Command="{Binding StepNegativeCommand}" Width="100" Margin="0" />
                                            <TextBox 
                                            x:Name="StepSizeBox" 
                                            Text="{Binding StepSize, Mode=TwoWay}" 
                                            Width="100" 
                                            TextAlignment="Center"
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="10"/>
                                            <Button Content="Step +" Command="{Binding StepPositiveCommand}" Width="100" Margin="0" />
                                        </StackPanel>
                                        <!-- Layer 2 -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                                            <Button Content="Scan -" Command="{Binding ScanNegativeCommand}" Width="100" Margin="0" />
                                            <Button Content="Home" Command="{Binding HomeCommand}" Width="100" Margin="10" />
                                            <Button Content="Scan +" Command="{Binding ScanPositiveCommand}" Width="100" Margin="0" />
                                        </StackPanel>
                                        <!-- Layer 3 -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                                            <Button Content="Move -" Command="{Binding MoveNegativeCommand}" Width="100" Margin="0" />
                                            <Button Content="STOP" Command="{Binding StopCommand}" Width="100" FontWeight="Bold" Foreground="Red" Margin="10" />
                                            <Button Content="Move +" Command="{Binding MovePositiveCommand}" Width="100" Margin="0" />
                                        </StackPanel>
                                        <!-- Progress Bars -->
                                        <Grid Grid.Row="3" Margin="0,5" HorizontalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <!-- Row for Buttons -->
                                                <RowDefinition Height="Auto" />
                                                <!-- Row for Progress Bars -->
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <SplitButton Content="Index"
                                             Width="100"
                                             Margin="5"
                                             Command="{Binding IndexCommand}">
                                                <SplitButton.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem Text="Index Left" Command="{Binding IndexMinusCommand}" />
                                                        <MenuFlyoutItem Text="Index Right" Command="{Binding IndexPlusCommand}" />
                                                    </MenuFlyout>
                                                </SplitButton.Flyout>
                                            </SplitButton>

                                            <SplitButton Content="Reset"
                                             Width="100" Margin="5" Grid.Row="0" Grid.Column="1"
                                             Command="{Binding ResetCommand}"
                                             IsEnabled="{Binding IsResetEnabled}">
                                                <SplitButton.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem Text="Reset All" Command="{Binding ResetCommand}" />
                                                        <MenuFlyoutItem Text="Reset Encoder" Command="{Binding ResetEncoderCommand}" />
                                                    </MenuFlyout>
                                                </SplitButton.Flyout>
                                            </SplitButton>

                                            <!-- Progress Bar for Index -->
                                            <ProgressBar
                                            Value="100"
                                            IsIndeterminate="True"
                                            Visibility="{Binding SearchingIndex, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Width="100"
                                            Height="5"
                                            Margin="5,28,0,0"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left" />

                                            <!-- Progress Bar for Reset -->
                                            <ProgressBar
                                            Value="100"
                                            IsIndeterminate="True"
                                            Visibility="Collapsed"
                                            Width="100"
                                            Height="5"
                                            Margin="5,28,0,0"
                                            Grid.Row="0"
                                            Grid.Column="1" 
                                            HorizontalAlignment="Left" />


                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <controls:Expander
                                    Grid.Row="5"
                                    Grid.Column="5"
                                    Margin="-14,20,0,1"
                                    Header="Advanced"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    IsExpanded="False">
                                <Grid>
                                    <oxyplot:PlotView
                                            Model="{Binding PlotModel}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Background="Transparent" 
                                            MinHeight="300"
                                            MinWidth="600"/>
                                </Grid>
                            </controls:Expander>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>