<Page
    x:Class="XeryonMotionGUI.Views.MotionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XeryonMotionGUI.Views"
    xmlns:helpers="using:XeryonMotionGUI.Helpers"
    xmlns:classes="using:XeryonMotionGUI.Classes"
    xmlns:charts="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:XeryonMotionGUI.ViewModels">

    <Page.DataContext>
        <viewmodels:MotionViewModel />
    </Page.DataContext>

    <Page.Resources>
        <helpers:AxisTypeToVisibilityConverter x:Key="AxisTypeToVisibilityConverter" />
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Controllers Section -->
        <ListView 
            ItemsSource="{Binding RunningControllers}" 
            SelectedItem="{Binding SelectedController, Mode=TwoWay}"
            Grid.Column="0" 
            Grid.Row="0" 
            Margin="10,0,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />
                        <TextBlock Text="{Binding Type}" FontSize="14" Foreground="Gray" Grid.Row="1" Grid.Column="0" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Axes Section -->
        <ListView 
            Grid.Column="1"
            Grid.Row="0"
            ItemsSource="{Binding SelectedController.Axes}"
            SelectedItem="{Binding SelectedAxis, Mode=TwoWay}"
            Margin="10,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="classes:Axis">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" />

                        <!-- EPOS Display -->
                        <!-- EPOS and Speed Display -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="EPOS:" Margin="5,0" />
                            <TextBox Text="{Binding EPOS}" Width="100" IsReadOnly="True" Margin="5" />

                            <TextBlock Text="Speed:" Margin="10,0" />
                            <TextBox Text="{Binding SPEED}" Width="100" IsReadOnly="True" Margin="5" />

                            <TextBlock Text="Max Speed:" Margin="10,0" />
                            <TextBox Text="{Binding MaxSpeed}" Width="100" IsReadOnly="True" Margin="5" PointerEntered="TextBox_PointerEntered"/>
                            
                        </StackPanel>

                        <!-- Status Display -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="STAT:" Margin="5,0" />
                            <Ellipse Fill="{Binding STAT, Converter={StaticResource BoolToColorConverter}}" Width="15" Height="15" Margin="5" />
                        </StackPanel>

                        <!-- Control Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Button Content="Move -" Command="{Binding MoveNegativeCommand}" Grid.Column="0" Margin="5"/>

                            <!-- Step Negative Button -->
                            <Button Content="Step -" Command="{Binding StepNegativeCommand}" Grid.Column="1" Margin="5"/>

                            <!-- Home Button -->
                            <Button Content="Home" Command="{Binding HomeCommand}" Grid.Column="2" Margin="5"/>

                            <!-- Step Positive Button -->
                            <Button Content="Step +" Command="{Binding StepPositiveCommand}" Grid.Column="3" Margin="5"/>

                            <!-- Move Positive Button -->
                            <Button Content="Move +" Command="{Binding MovePositiveCommand}" Grid.Column="4" Margin="5"/>

                            <!-- Stop Button -->
                            <Button Content="Stop" Command="{Binding StopCommand}" Grid.Column="5" Margin="5"/>
                            <!-- Stop Button -->
                            <Button Content="Index" Command="{Binding IndexCommand}" Grid.Column="6" Margin="5"/>
                            <!-- Stop Button -->
                            <Button Content="Reset" Command="{Binding ResetCommand}" Grid.Column="7" Margin="5"/>
                        </StackPanel>

                        <!-- Step Size Box -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Step Size:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox x:Name="StepSizeBox" Text="{Binding StepSize, Mode=TwoWay}" Width="100" Margin="5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="DPOS:" VerticalAlignment="Center" Margin="5"/>
                            <Slider
                                x:Name="PositionSlider"
                                Minimum="{Binding NegativeRange}"
                                Maximum="{Binding PositiveRange}"
                                Value="{Binding DPOS, Mode=TwoWay}"
                                Width="300" 
                                Margin="5"
                                StepFrequency="0.1"
                                TickFrequency="1"
                                TickPlacement="Inline"
                                VerticalAlignment="Center"
                                ValueChanged="PositionSlider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
