<Page
    x:Class="XeryonMotionGUI.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:XeryonMotionGUI.Helpers"
    xmlns:behaviors="using:XeryonMotionGUI.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    mc:Ignorable="d"
    Background="{x:Bind ViewModel.ShellPageBackground, Mode=OneWay}"
    Loaded="OnLoaded">

    <Grid>
        <!-- Title bar overlay section -->
        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <Image Source="/Assets/WindowIcon.ico"
                   HorizontalAlignment="Left"
                   Width="16"
                   Height="16" />
            <TextBlock x:Name="AppTitleBarText"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="28,0,0,0"/>
        </Grid>

        <!-- NavigationView -->
        <NavigationView
            x:Name="NavigationViewControl"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Visible"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            IsSettingsVisible="True"
            ExpandedModeThresholdWidth="1500"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            Header="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">

            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="Shell_Main"
                                    helpers:NavigationHelper.NavigateTo="XeryonMotionGUI.ViewModels.MainViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Hardware"
                                    helpers:NavigationHelper.NavigateTo="XeryonMotionGUI.ViewModels.HardwareViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Parameters"
                                    helpers:NavigationHelper.NavigateTo="XeryonMotionGUI.ViewModels.ParametersViewModel"
                                    IsEnabled="{x:Bind ViewModel.HasRunningControllers, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Motion"
                                    helpers:NavigationHelper.NavigateTo="XeryonMotionGUI.ViewModels.MotionViewModel"
                                    IsEnabled="{x:Bind ViewModel.HasRunningControllers, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_DemoBuilder"
                                    helpers:NavigationHelper.NavigateTo="XeryonMotionGUI.ViewModels.DemoBuilderViewModel"
                                    IsEnabled="{x:Bind ViewModel.HasRunningControllers, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}" Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>

            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior
                    DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Button HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,-23,10,0"
                                        Width="30"
                                        Height="30"
                                        Padding="0"
                                        Click="PopOutButton_Click"
                                        ToolTipService.ToolTip="Open in new window">
                                    <FontIcon Glyph="" FontSize="16" />
                                </Button>
                                <TextBlock Text="{Binding}" Style="{ThemeResource TitleTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>

            <!-- Frame for page content -->
            <Grid Margin="{StaticResource NavigationViewPageContentMargin}">
                <Frame x:Name="NavigationFrame" />
            </Grid>
        </NavigationView>

        <!-- Chat Toggle Button -->
        <Button x:Name="ChatToggleButton"
                Content="Chat"
                FontSize="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Width="60"
                Height="40"
                Canvas.ZIndex="999"
                Click="ChatToggleButton_Click"/>

        <!-- Chat Window -->
        <Grid x:Name="ChatWindow"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="0,0,20,70"
              Width="400"
              Height="500"
              Visibility="Collapsed"
              Canvas.ZIndex="1000">
            <Border x:Name="ChatBorder"
                    Background="{ThemeResource SystemChromeLowColor}"
                    CornerRadius="15"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Grid Grid.Row="0" CornerRadius="15,15,0,0">
                        <Grid.Background>
                            <SolidColorBrush Color="#30BF36"/>
                            <!-- RGB(48, 191, 54) -->
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Chat Assistant"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="15,10,0,10"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="MinimizeChatButton"
                                Grid.Column="1"
                                Content="🗕"
                                FontSize="12"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                Foreground="White"
                                Click="MinimizeChatButton_Click"
                                ToolTipService.ToolTip="Minimize"/>
                    </Grid>

                    <!-- Chat Message List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                        <StackPanel x:Name="ChatMessagesPanel" Orientation="Vertical" Padding="10"/>
                    </ScrollViewer>

                    <!-- Loading Animation -->
                    <ProgressRing x:Name="LoadingRing"
                                  Grid.Row="2"
                                  IsActive="False"
                                  Visibility="Collapsed"
                                  Width="30"
                                  Height="30"
                                  Margin="0,5,0,5" />

                    <!-- Chat Input -->
                    <Grid Grid.Row="3" Margin="10" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ChatInputBox"
                                 PlaceholderText="Type your message..."
                                 AcceptsReturn="False"
                                 KeyDown="ChatInputBox_KeyDown"
                                 Margin="0,0,10,0"
                                 BorderThickness="1"
                                 CornerRadius="5"/>
                        <Button Grid.Column="1"
                                Content="Send"
                                Click="SendChatMessage_Click"
                                Background="{ThemeResource SystemAccentColor}"
                                Foreground="White"
                                CornerRadius="5"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>